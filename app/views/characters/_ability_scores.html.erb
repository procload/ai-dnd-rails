<div id="ability_scores" class="bg-white shadow overflow-hidden sm:rounded-lg mt-4">
  <div class="px-4 py-5 sm:px-6">
    <h3 class="text-lg leading-6 font-medium text-gray-900">Ability Scores</h3>
  </div>
  <div class="border-t border-gray-200">
    <dl>
      <% Character::ABILITIES.each_with_index do |ability, index| %>
        <div class="<%= index.even? ? 'bg-gray-50' : 'bg-white' %> px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500"><%= ability.titleize %></dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= character.ability_scores[ability] %>
            (<%= format('%+d', character.ability_modifier(ability)) %>)
          </dd>
        </div>
      <% end %>
    </dl>
  </div>
</div> 
<%= form_with(model: character, class: "space-y-6") do |form| %>
  <% if character.errors.any? %>
    <div class="bg-red-50 p-4 rounded-lg">
      <h2 class="text-red-900 font-medium"><%= pluralize(character.errors.count, "error") %> prohibited this character from being saved:</h2>
      <ul class="list-disc list-inside text-red-800">
        <% character.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-4">
    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :class_type, class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :class_type, Character::CLASSES, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :level, class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :level, in: 1..20, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :alignment, class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :alignment, Character::ALIGNMENTS, {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= form.label :background, class: "block text-sm font-medium text-gray-700" %>
      <%= form.rich_text_area :background, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div class="space-y-2">
      <span class="block text-sm font-medium text-gray-700">Ability Scores</span>
      <% Character::ABILITIES.each do |ability| %>
        <div class="flex items-center space-x-2">
          <label class="w-24 text-sm text-gray-600"><%= ability.titleize %></label>
          <input type="number" name="character[ability_scores][<%= ability %>]" 
                 value="<%= character.ability_scores&.dig(ability) %>"
                 min="3" max="18"
                 class="w-20 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
        </div>
      <% end %>
    </div>
  </div>

  <div class="mt-6">
    <%= form.submit class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2" %>
  </div>
<% end %> 
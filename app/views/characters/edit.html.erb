<div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="px-4 py-6 sm:px-0">
    <div class="mb-6">
      <h1 class="text-2xl font-semibold text-gray-900">Edit Character</h1>
    </div>

    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <%= render "form", character: @character %>
      </div>
    </div>

    <div class="mt-4 space-x-4">
      <%= link_to "Back to character", @character, class: "text-sm text-gray-600 hover:text-gray-900" %>
      <%= link_to "Back to characters", characters_path, class: "text-sm text-gray-600 hover:text-gray-900" %>
    </div>
  </div>
</div>
